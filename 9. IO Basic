#Python File IO Basic

print("Enter \n r,\n w,\n x,\n a,\n t,\n b,\n +, \n to know details about File IO basic ")
i= input()
try:
   if(i=="r"):print("'r' means open file for reading by default")
   elif(i=="w"):print("'w' means open file for writing")
   elif(i=="x"):print("'x' create file if not existing")
   elif(i=="a"):print("'a' Add more content to file ")
   elif(i=="t"):print("'t' text mode by default")
   elif(i=="+"):print("'+' read and write mode")
   elif(i=="b"):print("'b' binary mode")
   else:print("Wrong input")
except Exception as e:
    print(e)
    
    
